<%= form_for(@event) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :Content %>
  <%= f.text_field :content, class: 'form-control' %>

  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control' %>

  
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>


